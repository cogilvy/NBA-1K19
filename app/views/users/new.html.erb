<% @user.errors.full_messages.each do |message| %>
  <h2 style="color:#930000; margin-left: 20px;"><%= message %></h2>
<% end %>

<div class="container">
  <h1>New User Signup</h1>

  <%= form_for @user do |f|%>
    <%=f.label :username%>
    <%=f.text_field :username%>
    <br>
    <%=f.label :password%>
    <%=f.password_field :password%>
    <br>
    <%=f.submit%>
  <%end%>
</div>
